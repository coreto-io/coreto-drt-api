	"definitions":{
		"Smart contract error response":{
			"type":"object",
			"properties":{
				"error":{
					"type":"string",
					"description":"The error resulted from the smart contract"
				},
				"type":{
					"type":"string",
					"description":"The error type resulted from the smart contract"
				}
			}
		},
		"Internal server error response":{
			"type":"object",
			"properties":{
				"error":{
					"type":"string",
					"description":"The error resulted from the server"
				},
				"statusCode":{
					"type":"number",
					"description":"The error status code resulted from the server"
				},
				"message":{
					"type":"string",
					"description":"The error message resulted from the server"
				}
			}
		},
		"params":{
			"type":"object",
			"description":"The payload to send to the method"
		},
		"Call payload":{
			"type":"object",
			"properties":{
				"account_id":{
					"type":"string",
					"description":"The NEAR account ID that will be performing the call"
				},
				"private_key":{
					"type":"string",
					"description":"The private key of the account id"
				},
				"contract":{
					"type":"string",
					"description":"The NEAR account ID of contract"
				},
				"method":{
					"type":"string",
					"description":"The method name to call"
				},
				"params":{
					"$ref":"#/definitions/params"
				},
				"attached_gas":{
					"type":"string",
					"description":"The amount of gas you will be attaching to the call in TGas"
				},
				"attached_tokens":{
					"type":"string",
					"description":"The amount of tokens to be sent to the contract you are calling in yoctoNEAR (10^-24 NEAR)"
				}
			},
			"required":[
				"account_id",
				"private_key",
				"contract",
				"method",
				"params",
				"attached_gas",
				"attached_tokens"
			]
		},
		"View payload":{
			"type":"object",
			"properties":{
				"contract":{
					"type":"string",
					"description":"The NEAR account ID of contract"
				},
				"method":{
					"type":"string",
					"description":"The method name to call"
				},
				"params":{
					"$ref":"#/definitions/params"
				}
			},
			"required":[
				"contract",
				"method",
				"params"
			]
		},
		"Create DID response":{
			"type":"object",
			"properties":{
				"did":{
					"type":"string",
					"description":"The DID generated"
				},
				"seed":{
					"type":"string",
					"description":"The seed used to generate the DID"
				}
			}
		},
		"Get/Has DID payload":{
			"type":"object",
			"properties":{
				"account_id":{
					"type":"string",
					"description":"The NEAR account ID of the DID owner"
				}
			},
			"required":[
				"account_id"
			]
		},
		"Put DID payload":{
			"type":"object",
			"properties":{
				"caller_account_id":{
					"type":"string",
					"description":"The NEAR account ID of the caller"
				},
				"caller_private_key":{
					"type":"string",
					"description":"The NEAR private key of the caller"
				},
				"account_id":{
					"type":"string",
					"description":"The NEAR account ID of the DID owner"
				},
				"did":{
					"type":"string",
					"description":"The DID to be added"
				}
			},
			"required":[
				"caller_account_id",
				"caller_private_key",
				"account_id",
				"did"
			]
		},
		"Transaction response":{
			"type":"object",
			"properties":{
				"hash":{
					"type":"string",
					"description":"The hash of the completed transaction"
				}
			}
		},
		"Transfer DID payload":{
			"type":"object",
			"properties":{
				"caller_account_id":{
					"type":"string",
					"description":"The NEAR account ID of the caller"
				},
				"caller_private_key":{
					"type":"string",
					"description":"The NEAR private key of the caller"
				},
				"old_account_id":{
					"type":"string",
					"description":"The NEAR account ID of the DID owner"
				},
				"new_account_id":{
					"type":"string",
					"description":"The NEAR account ID of the new DID owner"
				}
			},
			"required":[
				"caller_account_id",
				"caller_private_key",
				"old_account_id",
				"new_account_id"
			]
		},
		"Get source action types payload":{
			"type":"object",
			"properties":{
				"source":{
					"type":"string",
					"description":"The NEAR account ID of the source"
				}
			},
			"required":[
				"source"
			]
		},
		"Get user actions payload":{
			"type":"object",
			"properties":{
				"source_label":{
					"type":"string",
					"description":"The label of the source that submitted the actions"
				},
				"account_did":{
					"type":"string",
					"description":"The DID of the user"
				}
			},
			"required":[
				"source_label",
				"account_did"
			]
		},
		"Save action payload":{
			"type":"object",
			"properties":{
				"caller_account_id":{
					"type":"string",
					"description":"The NEAR account ID of the caller"
				},
				"caller_private_key":{
					"type":"string",
					"description":"The NEAR private key of the caller"
				},
				"account_did":{
					"type":"string",
					"description":"The DID of the account"
				},
				"action_date":{
					"type":"string",
					"format":"date",
					"description":"The unix timestamp of the action"
				},
				"action_type":{
					"type":"string",
					"description":"The type of the action"
				},
				"trust":{
					"type":"number",
					"description":"The trust variation value of the action"
				},
				"performance":{
					"type":"number",
					"description":"The performance variation value of the action"
				},
				"identifier":{
					"type":"string",
					"x-alternatives":[
						{
							"type":"string"
						},
						{
							"type":"number"
						}
					]
				}
			},
			"required":[
				"caller_account_id",
				"caller_private_key",
				"account_did",
				"action_date",
				"action_type",
				"trust",
				"performance"
			]
		},
		"Save actions batch item":{
			"type":"object",
			"properties":{
				"account_did":{
					"type":"string",
					"description":"The DID of the account"
				},
				"action_date":{
					"type":"string",
					"format":"date",
					"description":"The unix timestamp of the action"
				},
				"action_type":{
					"type":"string",
					"description":"The type of the action"
				},
				"trust":{
					"type":"number",
					"description":"The trust variation value of the action"
				},
				"performance":{
					"type":"number",
					"description":"The performance variation value of the action"
				},
				"identifier":{
					"type":"string",
					"x-alternatives":[
						{
							"type":"string"
						},
						{
							"type":"number"
						}
					]
				}
			},
			"required":[
				"account_did",
				"action_date",
				"action_type",
				"trust",
				"performance"
			]
		},
		"batch":{
			"type":"array",
			"items":{
				"$ref":"#/definitions/Save%20actions%20batch%20item"
			}
		},
		"Save actions batch payload":{
			"type":"object",
			"properties":{
				"caller_account_id":{
					"type":"string",
					"description":"The NEAR account ID of the caller"
				},
				"caller_private_key":{
					"type":"string",
					"description":"The NEAR private key of the caller"
				},
				"batch":{
					"$ref":"#/definitions/batch"
				}
			},
			"required":[
				"caller_account_id",
				"caller_private_key",
				"batch"
			]
		}
	}
